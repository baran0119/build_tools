diff --git a/products/AndroidProducts.mk b/products/AndroidProducts.mk
index 445b0db..a220bf6 100644
--- a/products/AndroidProducts.mk
+++ b/products/AndroidProducts.mk
@@ -174,3 +174,10 @@ endif
 ifeq (pa_yuga,$(TARGET_PRODUCT))
     PRODUCT_MAKEFILES += $(LOCAL_DIR)/pa_yuga.mk
 endif
+ifeq (pa_s2ve,$(TARGET_PRODUCT))
+    PRODUCT_MAKEFILES += $(LOCAL_DIR)/pa_s2ve.mk
+endif
+ifeq (pa_s2vep,$(TARGET_PRODUCT))
+    PRODUCT_MAKEFILES += $(LOCAL_DIR)/pa_s2vep.mk
+endif
+
diff --git a/products/pa_s2ve.mk b/products/pa_s2ve.mk
new file mode 100644
index 0000000..7a9f9f1
--- /dev/null
+++ b/products/pa_s2ve.mk
@@ -0,0 +1,25 @@
+# Check for target product
+ifeq (pa_s2ve,$(TARGET_PRODUCT))
+
+# OVERLAY_TARGET adds overlay asset source
+OVERLAY_TARGET := pa_hdpi
+
+# Build paprefs from sources
+PREFS_FROM_SOURCE ?= false
+
+# Inherit telephony common stuff
+$(call inherit-product, vendor/pa/configs/telephony.mk)
+
+# Include ParanoidAndroid common configuration
+include vendor/pa/main.mk
+
+# Inherit CM device configuration
+$(call inherit-product, device/samsung/s2ve/pa.mk)
+
+# Copy bootanimation
+PRODUCT_COPY_FILES += \
+    vendor/pa/prebuilt/bootanimation/800x480.zip:system/media/bootanimation.zip
+
+PRODUCT_NAME := pa_s2ve
+
+endif
